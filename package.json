{
  "name": "docs-framework-root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter '@farming-labs/*' run build",
    "dev": "pnpm --filter example-next dev",
    "typecheck": "pnpm --filter '@farming-labs/*' run typecheck",
    "release": "bumpp",
    "release:beta": "bumpp --preid beta",
    "publish:beta": "pnpm --filter '@farming-labs/*' publish --access public --tag beta --no-git-checks",
    "publish:latest": "pnpm --filter '@farming-labs/*' publish --access public --no-git-checks",
    "lint": "oxlint .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint:fix": "oxlint --fix ."
  },
  "devDependencies": {
    "bumpp": "^10.4.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "playwright": "^1.58.2",
    "puppeteer": "^24.37.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3"
}
