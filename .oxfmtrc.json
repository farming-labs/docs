{
  "$schema": "node_modules/oxfmt/configuration_schema.json",
  "rules": {
    "noUnusedVariables": "warn"
  },
  "ignorePatterns": [
    "node_modules/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/.nuxt/**",
    "**/.svelte-kit/**",
    "**/.astro/**",
    "**/build/**",
    "**/.turbo/**",
    "website/public/**"
  ]
}
